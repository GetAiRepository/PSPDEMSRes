@model EMS.WebApp.Data.SysAttachScreenRole
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">
        @ViewBag.Error
    </div>
}
<form asp-action="@(Model.uid == 0 ? "Create" : "Edit")" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="uid" type="hidden" />

    <!-- ✅ Show global validation messages like duplicates -->
    <div asp-validation-summary="All" class="text-danger "></div>

    <div class="row mb-3">
        <div class="col-md-12">
            <label asp-for="role_uid" class="form-label">Role Name</label>
            <select asp-for="role_uid" class="form-control" asp-items="ViewBag.SysRoleList">
                <option value="">-- Select Role --</option>
            </select>
            <span asp-validation-for="role_uid" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="screen_uids" class="form-label">Screen Name</label>
            
            <select asp-for="screen_uids" asp-items="ViewBag.SysScreenList" class="form-control" multiple></select>
            <span asp-validation-for="screen_uids" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.uid == 0 ? "Save" : "Update")
        </button>
    </div>
</form>
