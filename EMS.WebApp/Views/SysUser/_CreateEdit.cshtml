@model EMS.WebApp.Data.SysUser

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">
        @ViewBag.Error
    </div>
}

<form asp-action="@(Model.user_id == 0 ? "Create" : "Edit")" method="post" id="sysUserForm">
    @Html.AntiForgeryToken()
    <input asp-for="user_id" type="hidden" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="adid" class="form-label">ADID</label>
            <input asp-for="adid" class="form-control glass rounded-2" maxlength="100" />
            <span asp-validation-for="adid" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="role_id" class="form-label">Role Name <span class="text-danger">*</span></label>
            <select asp-for="role_id" class="form-control glass rounded-2" asp-items="ViewBag.SysRoleList">
                <option value="">-- Select Role --</option>
            </select>
            <span asp-validation-for="role_id" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="full_name" class="form-label">Full Name <span class="text-danger">*</span></label>
            <input asp-for="full_name" class="form-control glass rounded-2" maxlength="80" />
            <span asp-validation-for="full_name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
            <input asp-for="email" type="email" class="form-control glass rounded-2" maxlength="120" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="is_active" class="form-label">User Status <span class="text-danger">*</span></label>
            <div class="d-flex justify-content-around align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="is_active" value="true" id="Active">
                    <label class="form-check-label" for="Active">Active</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="is_active" value="false" id="NotActive">
                    <label class="form-check-label" for="NotActive">Not Active</label>
                </div>
            </div>
            <span asp-validation-for="is_active" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.user_id == 0 ? "Save" : "Update")
        </button>
    </div>
</form>

@section Scripts {
    <script>
        console.log('Basic form loaded successfully');
    </script>
}